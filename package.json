{
  "name": "the-movie-db-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "compression": "^1.7.3",
    "cross-fetch": "^2.2.3",
    "date-fns": "^1.30.1",
    "express": "^4.16.4",
    "express-promise-router": "^3.0.3",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^5.1.1",
    "react-router-dom": "^5.0.0",
    "react-scroll": "^1.7.11",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "semantic-ui-react": "^0.83.0",
    "styled-components": "^4.2.0"
  },
  "scripts": {
    "start": "webpack --config ./webpackConfig/development.js --watch",
    "build": "webpack --config ./webpackConfig/production.js",
    "lint": "tslint -c tslint.json -p .",
    "test": "npm run lint && jest",
    "test-jest": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.7",
    "@types/react": "^16.7.6",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "file-loader": "^2.0.0",
    "jest": "^23.6.0",
    "nock": "^10.0.2",
    "nodemon-webpack-plugin": "^4.0.3",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less|styl|scss|sass|sss)$": "identity-obj-proxy"
    },
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.tsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/webpackConfig/"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!**/*.d.ts"
    ]
  }
}
